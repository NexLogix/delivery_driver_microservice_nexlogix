<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".ReportesInternosActivity">

    <!-- Top App Bar (igual a activity_driver) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/telegram_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Botón volver -->
            <LinearLayout
                android:id="@+id/back_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="@color/white"
                    android:contentDescription="Volver" />

            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/page_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REPORTES INTERNOS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Botón Agregar Reporte -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_report_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button" 
                app:cornerRadius="20dp"
                android:backgroundTint="@color/telegram_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Content Area -->
    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Formulario para crear/editar reporte (inicialmente oculto) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/form_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/form_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuevo Reporte"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/telegram_blue"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Dropdown Categoría -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/categoria_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Categoría"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/telegram_blue"
                    app:hintTextColor="@color/telegram_blue">

                    <AutoCompleteTextView
                        android:id="@+id/categoria_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="@color/gray_dark" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Descripción -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descripcion_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción del reporte"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/telegram_blue"
                    app:hintTextColor="@color/telegram_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descripcion_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:textColor="@color/gray_dark"
                        android:maxLines="6"
                        android:scrollbars="vertical" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botones del formulario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Cancelar"
                        android:textColor="@color/telegram_blue"
                        android:layout_marginEnd="8dp"
                        app:strokeColor="@color/telegram_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_button"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Guardar"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/telegram_blue" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de reportes con scroll nativo -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportes_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@color/telegram_blue"
            android:scrollbarTrackVertical="@color/gray_light"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>