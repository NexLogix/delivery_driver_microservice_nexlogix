<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".DriverActivity">

    <!-- Top App Bar (modernized) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/telegram_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Menu area (keeps same id and behavior) -->
            <LinearLayout
                android:id="@+id/menu_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:tint="@color/white"
                    android:contentDescription="Menú" />

            </LinearLayout>

            <!-- Title / Welcome text -->
            <TextView
                android:id="@+id/driver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hola, Conductor"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Logout button (keeps same id and onClick) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Salir"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button" 
                app:cornerRadius="20dp"
                android:backgroundTint="@color/telegram_blue_dark"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:onClick="logout" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Content Area -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Content display area (conductor) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/conductor_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">

                    <!-- Avatar -->

                    <!-- Text container (keeps same id for backward compatibility) -->
                    <TextView
                        android:id="@+id/section_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="80dp"
                        android:text="Selecciona una opción del menú para ver detalles"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lista de vehículos (inicialmente oculta) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vehicles_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:overScrollMode="always"
                android:layout_marginTop="8dp" />

            <!-- Lista de rutas (inicialmente oculta) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/routes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:overScrollMode="always"
                android:layout_marginTop="8dp" />

            <!-- Botón para volver al menú -->
            <Button
                android:id="@+id/back_to_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Volver al menú"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:backgroundTint="@color/telegram_blue"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
